#extends("page/layout/2columns-with-left-sidebar.vm")

#block("sidebar")
这是左边栏
#end

#block("content")

<form id="nodeForm" role="form" method="POST" class="base-form form-horizontal" action="$action">

    <div class="panel panel-default">
        <div class="panel-heading">表单信息</div>
        <div class="panel-body">

            <input type="hidden" value="$!{node.id}" name="id" />

            <div class="form-group">
                <label class="col-sm-3 control-label" for="input1">用户名<span class="require-note">*</span></label>
                <div class="col-sm-9">
                    <input name="userName" required value="$!{node.userName}" type="text" class="form-control" id="input1" placeholder="普通文本" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label" for="input2">密码<span class="require-note">*</span></label>
                <div class="col-sm-9">
                    <input name="password" required value="$!{node.password}" type="password" class="form-control" id="input2" placeholder="密码" />
                </div>
            </div>

            <div class="save-wrap-bottom">
                <button type="submit" class="btn btn-primary">提交</button>
                <p class="formInfo"></p>
            </div>
        </div>
    </div>
</form>

#script()
require(['./index'], function(app) {
    app({
        selector: '#nodeForm'
    });
});
#end


